pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2 -v /home/administrateur/smartclass_dev/settings.xml:/root/.m2/settings.xml'
        }
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('push') {
            steps {
                sh 'mvn clean deploy'
            }
        }
        stage ('Final') {
            steps {
                build 'docker-compose'
            }
        }
    }
}
